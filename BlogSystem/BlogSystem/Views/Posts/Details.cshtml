@model BlogSystem.Models.Post

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <article>
        <header>
            <h2>
                @Model.Title
            </h2>
            <small class="author">
                Author: @Html.DisplayFor(model => model.Author.FullName)
            </small>
        </header>
        <p>
            @Html.Raw(Model.Body)
        </p>
        <footer class="pull-right">
            @if (User.IsInRole("Administrators") || (User.IsInRole("Authors") && Model.IsAuthor(User.Identity.Name)))
            {
                @:<a class="btn btn-success btn-xs" href="/Posts/Edit/@Model.Id">Edit</a>
                @:<a class="btn btn-danger btn-xs" href="/Posts/Delete/@Model.Id">Delete</a>
            }

            <a class="btn btn-default btn-xs" href="/Posts">Back</a>
        </footer>
    </article>
</div>
