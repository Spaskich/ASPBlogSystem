@model IEnumerable<BlogSystem.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author.FullName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @BlogSystem.HelperClasses.TextUtils.TextExcerpt(item.Body)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @if (item.Author == null)
            {
                <i>No Author</i>
            }

            @Html.DisplayFor(modelItem => item.Author.FullName)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id })

            @if (User.IsInRole("Administrators") || (User.IsInRole("Authors") && item.IsAuthor(User.Identity.Name)))
            {
                @:| 
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) @:| 
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>
