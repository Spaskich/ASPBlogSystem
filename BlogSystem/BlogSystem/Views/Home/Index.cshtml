@{
    ViewBag.Title = "Home";
}

@model List<BlogSystem.Models.Post>

<div class="jumbotron">
    <h1>Blog System</h1>
    <p class="lead">A simple Blog System created with ASP.NET.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="container">
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-sm-6">
                <article>
                    <header>
                        <h2>
                            <a href="/Posts/Details/@post.Id">@post.Title</a>
                        </h2>
                    </header>
                    <p>
                        @Html.Raw(BlogSystem.HelperClasses.TextUtils.TextExcerpt(post.Body, 500))
                    </p>
                    <footer class="pull-right">
                        <small class="author">
                            @Html.DisplayFor(modelItem => post.Author.FullName)
                        </small>
                    </footer>
                </article>
            </div>
        }
    </div>
</div>