@model List<BlogSystem.Models.Post>

@{
    Layout = null;
}

<div class="container">
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-sm-6">
                <article>
                    <header>
                        <h2>
                            <a href="/Posts/Details/@post.Id">@post.Title</a>
                        </h2>
                    </header>
                    <p>
                        @Html.Raw(BlogSystem.HelperClasses.TextUtils.TextExcerpt(post.Body, 500))
                    </p>
                    <footer class="pull-right">
                        <small class="author">
                            @Html.DisplayFor(modelItem => post.Author.FullName)
                        </small>
                    </footer>
                </article>
            </div>
        }
    </div>
</div>
